#!/bin/sh
curl -Lo /tmp/yadm https://github.com/heliocentric/dotfiles/raw/master/bin/yadm && chmod a+x /tmp/yadm
/tmp/yadm clone https://github.com/heliocentric/dotfiles.git
/tmp/yadm reset --hard HEAD
./bin/yadm submodule init
./bin/yadm submodule update
OSNAME="$(uname -s)"
case "${OSNAME}" in
	FreeBSD)
		sudo pkg install puppet4
		sudo pkg install mcollective
		;;
	Linux)
		sudo yum install puppet-agent
		;;

esac
sudo puppet apply --modulepath=~/puppet-workstation/modules ~/puppet-workstation
